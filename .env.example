# ─── PostgreSQL ───────────────────────────────────
POSTGRES_USER=votes_user
POSTGRES_PASSWORD=votes_pass
POSTGRES_DB=votes_db

# ─── Application DB (least-privilege role) ────────
DATABASE_URL=postgresql+asyncpg://app_user:app_pass@db:5432/votes_db

# ─── MinIO (Object Storage) ──────────────────────
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=photos

# ─── Paillier key size (bits, demo only) ─────────
PAILLIER_KEY_BITS=256
